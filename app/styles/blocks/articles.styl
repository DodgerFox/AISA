.articles

  &-body
    display flex
    flex-wrap wrap
    padding-top 40px
    +to-width(1100px)
      padding-top 20px

  &-item
    width 33.333%
    padding 10px 20px
    +to-width(1100px)
      padding 10px
    +to-width(768px)
      width 50%
    +to-width(520px)
      width 100%

    &__image
      width 100%
      height 200px
      background-color #333
      background-size cover
      background-position center
      +to-width(1100px)
        height 180px
      +to-width(520px)
        height 200px
