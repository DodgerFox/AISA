.header
  position relative
  width 100%
  padding 15px 0
  z-index 10
  background-color #333
  height 54px

  .wrap
    display flex
    justify-content space-between
    align-items center
    max-width 1600px
    height 100%

  &-wrap
    +to-width(640px)
      display none

  &-logo
    img
      max-width 180px

  &-phone
    margin-left 20px
    img
      max-width 22px

  &-user
    display flex
    align-items center

    &__name
      font-size 16px
      color white
      font-weight 500

    &__image
      width 24px
      height 24px
      border-radius 50%
      background-color #eaeaea
      background-size cover
      background-position top center
      margin-left 15px
      +to-width(640px)
        display none


.dropdown
  display none
  transform translateY(-100%)
  right 0
  left 0
  top 54px
  position absolute
  background-color #eaeaea
  z-index 5
  transition 0.3s transform
  +to-width(640px)
    display block

  &.open
    transform translateY(0%)

  &-item
    display flex
    align-items center
    height 54px
    padding 0 20px
    border-bottom 1px solid white
    &:last-child
      border-bottom 0

    img
      max-width 24px
      margin-right 15px

    p
      color #141414
      font-size 14px


.gamburger
  position absolute
  top -5px
  right 20px
  cursor pointer
  width 24px
  height 26px
  display none
  min-width 24px
  +to-width(640px)
    display block

  &__item
    position absolute
    left 0
    top 8px
    height 2px
    background-color #f0f0f0
    right 0
    transition 0.3s all
    &:nth-child(2)
      top 16px
    &:last-child
      top 24px

  &.active
    .gamburger__item
      &:nth-child(1)
        transform rotate(-45deg)
        top 18px
      &:nth-child(2)
        transform rotate(45deg)
        top 18px
      &:last-child
        opacity 0

  &:hover
    cursor pointer
